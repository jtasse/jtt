{
  "name": "jtt",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "dev": "vite",
    "dev:all": "concurrently -k -n \"MAIN,DOCS\" -c \"blue,magenta\" \"npm run dev\" \"npm run dev:docs\"",
    "dev:docs": "npm run dev -w @jtt/docs -- --host 127.0.0.1 --force",
    "build": "vite build",
    "build:docs": "npm run build -w @jtt/docs",
    "build:combine": "node scripts/build-combine.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:content": "vale --config src/vale/.vale.ini src/content/about src/content/blog src/content/portfolio",
    "lint:content:errors": "vale --config src/vale/.vale.ini --minAlertLevel error src/content/about src/content/blog src/content/portfolio",
    "lint:sync": "vale sync --config src/vale/.vale.ini"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "gsap": "^3.13.0",
    "lil-gui": "^0.21.0",
    "path2d-polyfill": "^3.2.1",
    "three": "^0.180.0",
    "three.regular.helvetiker": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.0.0",
    "jsdom": "^24.0.0",
    "vite": "^6.4.1",
    "vitest": "^2.1.8"
  }
}